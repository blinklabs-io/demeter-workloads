{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "composite": true
    },
    "exclude": ["**/node_modules", "**/.*/", "**/jest.config.js", "**/.build", "**/dist"]
}
